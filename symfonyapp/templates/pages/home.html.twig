{% extends "base.html.twig" %}
 
{% block body %}
<br><style>{% include 'css/styles.css' %}</style><br>
<br><style>{% include 'font-awesome/css/font-awesome.min.css' %}</style><br>
{% for message in app.flashes('success') %}
<div class="alert alert-success">
{{message}}
</div>

{% endfor %} 

<nav class="navbar navbar-expand-lg navbar-light bg-light">

  <div class="container-fluid">
    <a class="navbar-brand" href="#">Efficience It</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Contact</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>
      </ul>
    </div>
  </div>
</nav>


<div class="container h-100">
    <div class="row col-12 align-self-center h-100">
        <div class="col-12">
    
    {{ form_start(form, {'attr': {'class': 'form-group row'}}) }}
    <div class="form-hrader"></div>
	  				<h4>Nous Joindre</h4>
	  				<hr class="underline">
	  				<div class="form-row">
	  					<div class="col">
	  						<div class="input-group">
								<div class="input-group-prepend">
								    <div class="input-group-text">
		  					    	   <i class="fa fa-user"></i>
								    </div>
								</div>
                    {{ form_widget(form.nom, {'attr': {'placeholder': 'Votre nom'}}) }}
							</div>
	  					</div>
              <div class="col">
	  						<div class="input-group">
								<div class="input-group-prepend">
								    <div class="input-group-text">
		  					    	   <i class="fa fa-user"></i>
								    </div>
								</div>
                    {{ form_widget(form.prenom, {'attr': {'placeholder': 'Votre Prenom'}}) }}
							</div>
	  					</div>
              <div class="col">
	  						<div class="input-group">
								<div class="input-group-prepend">
								    <div class="input-group-text">
		  					    	   <i class="fa fa-user"></i>
								    </div>
								</div>
                    {{ form_widget(form.Departement, {'attr': {'placeholder': 'Sélectionner le Département'}}) }}
							</div>
	  					</div>
	  					<div class="col">
	  						<div class="input-group">
								<div class="input-group-prepend">
								    <div class="input-group-text">
		  					    	   <i class="fa fa-envelope"></i>
								    </div>
								</div>
						       {{ form_widget(form.mail, {'attr': {'placeholder': 'Votre Mail'}}) }}
							</div>
	  					</div>
	  				</div>
	  				
	  				<div class="form-row">
	  					<div class="col">
	  						<div class="input-group">
								<div class="input-group-prepend textarea">
								    <div class="input-group-text">
		  					    	   <i class="fa fa-file"></i>
								    </div>
								</div>
	  						    {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Votre message'}}) }}
							</div>
							<div class="">
	  						    <button class="btn"><i class="fa fa-send"></i>ENVOYER</button>
							</div>
	  					</div>
	  				</div>
	  		
{{ form_end(form) }}

</div>
</div>
</div>
{% endblock %}
   